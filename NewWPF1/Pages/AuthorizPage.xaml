<Page x:Class="NewWPF1.Pages.AuthorizPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NewWPF1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Авторизация" 
                   Grid.Column="1" 
                   Grid.Row="1"
                   Grid.ColumnSpan="4"
                   FontSize="35"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        <StackPanel Grid.Column="1"
                    Grid.Row="2"
                    Grid.ColumnSpan="4"
                    Orientation="Horizontal">
            <TextBlock Text="Логин"
                       FontSize="25"
                       FontWeight="Heavy"
                       VerticalAlignment="Center"
                       />
            <TextBox x:Name="LoginTb"
                     Width="200"
                     Height="40"
                     VerticalAlignment="Center"
                     Margin="100 0 0 0"/>
        </StackPanel>
        <StackPanel Grid.Column="1"
            Grid.Row="3"
            Grid.ColumnSpan="4"
            Orientation="Horizontal">
            <TextBlock Text="Пароль"
               FontSize="25"
               FontWeight="Heavy"
               VerticalAlignment="Center"
               />
            <PasswordBox x:Name="PasswordTb"
             Width="200"
             Height="40"
             VerticalAlignment="Center"
             Margin="80 0 0 0"/>
        </StackPanel>
        <Button  
            x:Name="LoginBtn"
            Grid.Column="2"
            Grid.Row="4"
            Grid.ColumnSpan="2"
            Margin="15"
            Content="ВОЙТИ"
            FontWeight="DemiBold"
            Click="LoginBtn_Click"
            />
    </Grid>
</Page>
